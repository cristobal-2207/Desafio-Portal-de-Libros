<div class="row">
  <div class="col-4 offset-4">
    <h3>Solicita un libro</h3>
    <%= form_with model: @book, url: petition_books_path do |f|%>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "Nombre Libro"%>
      </div>
      <div class="form-group">
        <%= f.hidden_field :status, value: 'requested'%>
      </div>
      <div class="form-group">
        <%= f.submit 'Solicitar', class: "btn btn-primary form-control request-book"%>
      </div>
    <%end%>
  </div>
</div>